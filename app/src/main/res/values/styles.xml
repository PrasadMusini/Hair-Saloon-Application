    <style name="MyTabLayoutStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">@color/transparent</item>
        <item name="tabIndicatorColor">@color/saloon_primary</item>
        <!-- Add other styling attributes as needed -->
    </style>

    <!-- res/values/styles.xml -->
    <style name="OpTabLayoutStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">@color/transparent</item>
        <item name="tabIndicatorColor">@color/someColor</item>
        <item name="tabBackground">@drawable/tab_background</item>
        <item name="tabTextColor">@color/saloon_header</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextAppearance">@style/OpTabTestAppearance</item>
    </style>


    <style name="CustomProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:indeterminateTint">@color/saloon_header</item>
    </style>

    <style name="OpTabTestAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="slot_btn_accepted_status_style" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/white</item>
            <item name="cornerSize">50%</item>
        <item name="strokeWidth">@dimen/selected_button_stroke_width</item>
        <item name="strokeColor">@color/green</item>
    </style>
