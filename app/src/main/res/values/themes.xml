<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PRACTICE2" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary Theme.Material3.DayNight.NoActionBar MaterialComponents.DayNight.NoActionBar-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorPrimary">@color/saloon_header</item>
        <item name="colorPrimaryVariant">@color/secondary_theme</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="customAnimation">

        <item name="android:windowEnterAnimation">@anim/enter_animation</item>
        <item name="android:windowExitAnimation">@anim/exit_animation</item>

    </style>

    <style name="round_shape">
        <item name="cornerFamily" >rounded</item>
        <item name="cornerSize" >50%</item>
    </style>
    
</resources>