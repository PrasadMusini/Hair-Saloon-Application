<?xml version="1.0" encoding="utf-8"?><!-- res/drawable/tab_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Unselected state -->
    <item android:state_selected="false">
        <shape android:shape="rectangle">
            <!-- Set your desired background color for unselected state -->
            <corners android:bottomLeftRadius="25dp" android:bottomRightRadius="25dp" android:topLeftRadius="25dp" android:topRightRadius="25dp" />
            <solid android:color="@color/white" />
            <stroke android:width="2dp" android:color="@color/saloon_header"/>
        </shape>
    </item>
    <!-- Selected state -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <!-- Set your desired background color for selected state -->
            <corners android:bottomLeftRadius="25dp" android:bottomRightRadius="25dp" android:topLeftRadius="25dp" android:topRightRadius="25dp" />
            <solid android:color="@color/saloon_header" />
        </shape>
    </item>
</selector>
